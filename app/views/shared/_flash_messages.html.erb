
<script type="text/javascript">
  $(document).on('page:change', function() {
    hideNotices();
    <% flash.each do |k, v| %>
      <% if ['alert', 'error'].include?(k) %>
        stickyError(<%= v.to_json.html_safe %>);
      <% elsif 'notice' == k %>
        notice(<%= v.to_json.html_safe %>);
      <% else %>
        notify(<%= k.to_json.html_safe %>, <%= v.to_json.html_safe %>, { hide: false });
      <% end %>
    <% end %>
  });
</script>
