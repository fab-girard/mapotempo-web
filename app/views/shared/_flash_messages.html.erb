
<script type="text/javascript">
  $(document).on('page:change', function() {
    hideNotices();
    <% flash.each do |k, v| %>
      <% if ['alert', 'error'].include?(k) %>
        stickyError(<%= v.to_json.html_safe %>);
      <% else %>
        flashNotify(k, <%= v.to_json.html_safe %><% if k != 'notice' %>, { hide: false }<% end %>);
      <% end %>
    <% end %>
  });
</script>
